<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0"
  prefWidth="1250.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.controller.EditAccountController">
  <top>
    <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" spacing="10.0"
      styleClass="background_main" stylesheets="@../css/style.css" BorderPane.alignment="CENTER">
      <children>
        <HBox alignment="CENTER" prefHeight="81.0" prefWidth="223.0" styleClass="background-logo"
          stylesheets="@../css/style.css">
          <children>
            <ImageView fitHeight="60.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../images/logo.png"/>
              </image>
            </ImageView>
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
          </padding>
        </HBox>
        <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="26.0" prefWidth="234.0"
          styleClass="round-layout" stylesheets="@../css/style.css">
          <children>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../images/ic_search.png"/>
              </image>
            </ImageView>
            <TextField fx:id="txtSearch" prefHeight="30.0" prefWidth="194.0" promptText="Search"
              styleClass="transparent" stylesheets="@../css/style.css">
              <font>
                <Font size="14.0"/>
              </font>
            </TextField>
          </children>
          <HBox.margin>
            <Insets left="10.0" top="10.0"/>
          </HBox.margin>
        </HBox>
        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
        <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="84.0" prefWidth="246.0"
          spacing="10.0">
          <children>
            <ImageView fx:id="changeLanguage" fitHeight="30.0" fitWidth="30.0"
              onMousePressed="#showChangeLanguageMousePressed" pickOnBounds="true"
              preserveRatio="true">
              <image>
                <Image url="@../images/ic_usa.png"/>
              </image>
              <HBox.margin>
                <Insets right="15.0"/>
              </HBox.margin>
            </ImageView>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../images/user.png"/>
              </image>
            </ImageView>
            <Label fx:id="username" text="Do Huy Hoang" textFill="#667777">
              <font>
                <Font size="16.0"/>
              </font>
            </Label>
          </children>
        </HBox>
      </children>
    </HBox>
  </top>
  <left>

    <VBox alignment="TOP_CENTER" prefHeight="570.0" prefWidth="223.0" spacing="10.0"
      styleClass="background-logo" stylesheets="@../css/style.css" BorderPane.alignment="CENTER">
      <children>
        <HBox fx:id="dashboard" alignment="CENTER_LEFT" onMousePressed="#goToDashboard"
          spacing="5.0">
          <children>
            <ImageView fx:id="imgdashboard" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true"
              preserveRatio="true">
              <image>
                <Image url="@../images/ic_dashboard.png"/>
              </image>
            </ImageView>
            <Label fx:id="lbdashboard" text="%dashboard" textFill="WHITE">
              <font>
                <Font name="System Bold" size="20.0"/>
              </font>
            </Label>
          </children>
          <VBox.margin>
            <Insets left="30.0"/>
          </VBox.margin>
        </HBox>
        <HBox fx:id="addProduct2" alignment="CENTER_LEFT" onMousePressed="#goToInsertProduct"
          spacing="5.0" style="-fx-background-color: #234;">
          <children>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../images/ic_product.png"/>
              </image>
              <HBox.margin>
                <Insets left="30.0"/>
              </HBox.margin>
            </ImageView>
            <Label text="%addProduct" textFill="WHITE">
              <font>
                <Font name="System Bold" size="20.0"/>
              </font>
            </Label>
          </children>
        </HBox>
        <HBox fx:id="productsList" alignment="CENTER_LEFT" onMousePressed="#goToProductList"
          spacing="5.0" style="-fx-background-color: #234;">
          <children>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../images/ic_product_list.png"/>
              </image>
              <HBox.margin>
                <Insets left="30.0"/>
              </HBox.margin>
            </ImageView>
            <Label text="%productList" textFill="WHITE">
              <font>
                <Font name="System Bold" size="20.0"/>
              </font>
            </Label>
          </children>
        </HBox>
        <HBox fx:id="accountList" alignment="CENTER_LEFT" onMouseClicked="#goToAccountList"
          spacing="5.0" style="-fx-background-color: #234;">
          <children>
            <ImageView fitHeight="30.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../images/ic_account.png"/>
              </image>
              <HBox.margin>
                <Insets left="30.0"/>
              </HBox.margin>
            </ImageView>
            <Label text="%accountList" textFill="WHITE">
              <font>
                <Font name="System Bold" size="20.0"/>
              </font>
            </Label>
          </children>
        </HBox>
      </children>
      <padding>
        <Insets top="15.0"/>
      </padding>
    </VBox>
  </left>
  <center>
    <StackPane BorderPane.alignment="CENTER">
      <children>
        <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
          <children>
            <VBox fx:id="changeLanguageContainer" alignment="CENTER_LEFT" maxHeight="-Infinity"
              maxWidth="-Infinity" style="-fx-background-radius: 5;" styleClass="background_main"
              stylesheets="@../css/style.css" visible="false">
              <children>
                <HBox alignment="CENTER" maxWidth="-Infinity">
                  <children>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true"
                      preserveRatio="true">
                      <image>
                        <Image url="@../images/ic_usa.png"/>
                      </image>
                    </ImageView>
                    <Label text="American" textFill="#667777">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Label>
                  </children>
                  <VBox.margin>
                    <Insets/>
                  </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" maxWidth="-Infinity">
                  <children>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true"
                      preserveRatio="true">
                      <image>
                        <Image url="@../images/ic_vietnam.png"/>
                      </image>
                    </ImageView>
                    <Label text="Vietnamese" textFill="#667777">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Label>
                  </children>
                  <VBox.margin>
                    <Insets/>
                  </VBox.margin>
                </HBox>
              </children>
              <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
              </padding>
              <HBox.margin>
                <Insets right="100.0"/>
              </HBox.margin>
            </VBox>
          </children>
        </HBox>
        <VBox prefHeight="200.0" prefWidth="100.0" styleClass="background"
          stylesheets="@../css/style.css">
          <children>
            <Label text="Add Account">
              <font>
                <Font name="System Bold" size="20.0"/>
              </font>
              <VBox.margin>
                <Insets left="25.0" top="15.0"/>
              </VBox.margin>
            </Label>
            <VBox prefHeight="507.0" prefWidth="730.0" spacing="20.0"
              style="-fx-background-color: fff; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
              <VBox.margin>
                <Insets bottom="15.0" left="25.0" right="15.0" top="15.0"/>
              </VBox.margin>
              <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
              </padding>
              <children>
                <Label text="Account Infomation">
                  <font>
                    <Font size="18.0"/>
                  </font>
                </Label>
                <Label text="Fill all infomation below ">
                  <font>
                    <Font size="16.0"/>
                  </font>
                </Label>
                <HBox spacing="10.0">
                  <children>
                    <VBox HBox.hgrow="ALWAYS">
                      <children>
                        <Label text="Username">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </Label>
                        <TextField fx:id="txtUsername">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </TextField>
                      </children>
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                      <children>
                        <Label text="Email">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </Label>
                        <TextField fx:id="txtEmail">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </TextField>
                      </children>
                    </VBox>
                  </children>
                </HBox>
                <VBox>
                  <children>
                    <Label text="Address">
                      <font>
                        <Font size="16.0"/>
                      </font>
                    </Label>
                    <TextField fx:id="txtAddress">
                      <font>
                        <Font size="16.0"/>
                      </font>
                    </TextField>
                  </children>
                </VBox>
                <HBox spacing="10.0">
                  <children>
                    <VBox HBox.hgrow="ALWAYS">
                      <children>
                        <Label text="Password">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </Label>
                        <PasswordField fx:id="pfPassword">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </PasswordField>
                      </children>
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                      <children>
                        <Label text="Confirm Password">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </Label>
                        <PasswordField fx:id="pfConfirmPassword">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </PasswordField>
                      </children>
                    </VBox>
                  </children>
                </HBox>
                <HBox spacing="10.0">
                  <children>
                    <VBox prefHeight="62.0" prefWidth="204.0" HBox.hgrow="ALWAYS">
                      <children>
                        <Label text="Type">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </Label>
                        <ChoiceBox fx:id="cbType" prefHeight="37.0" prefWidth="480.0"
                          VBox.vgrow="ALWAYS"/>
                      </children>
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                      <children>
                        <Label text="Phone Number">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </Label>
                        <TextField fx:id="txtPhoneNumber">
                          <font>
                            <Font size="16.0"/>
                          </font>
                        </TextField>
                      </children>
                    </VBox>
                  </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                  <children>
                    <Button fx:id="btnSave" mnemonicParsing="false" onAction="#editAccount"
                      prefHeight="25.0" prefWidth="86.0" style="-fx-background-color: #56d;"
                      text="Save" textFill="WHITE">
                      <font>
                        <Font name="System Bold" size="14.0"/>
                      </font>
                    </Button>
                  </children>
                  <VBox.margin>
                    <Insets top="10.0"/>
                  </VBox.margin>
                </HBox>
              </children>
            </VBox>
          </children>
        </VBox>
      </children>
    </StackPane>
  </center>
</BorderPane>
